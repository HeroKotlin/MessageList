<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dividerView"
        android:layout_width="@dimen/message_list_menu_item_divider_width"
        android:layout_height="@dimen/message_list_menu_item_divider_height"
        android:layout_gravity="center_vertical"
        android:background="@color/message_list_menu_item_divider_color"/>

    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/message_list_menu_item_text_color"
        android:textSize="@dimen/message_list_menu_item_text_size"
        android:singleLine="true"
        android:ellipsize="end"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:background="@drawable/message_list_menu_item"/>

</LinearLayout>