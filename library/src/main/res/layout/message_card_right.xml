<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/message_list_message_padding_horizontal"
                android:paddingRight="@dimen/message_list_message_padding_horizontal">

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/message_list_message_margin_top"
        android:textSize="@dimen/message_list_time_text_size"
        android:textColor="@color/message_list_time_text_color"
        android:background="@drawable/message_list_time"
        tools:text="12:12"/>

    <com.github.herokotlin.messagelist.view.RoundImageView
        android:id="@+id/avatarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_toLeftOf="@id/avatarView"
        android:layout_marginRight="@dimen/message_list_right_user_name_margin_right"
        android:layout_marginBottom="@dimen/message_list_right_user_name_margin_bottom"
        android:maxLines="1"
        android:textSize="@dimen/message_list_right_user_name_text_size"
        android:textColor="@color/message_list_right_user_name_text_color"
        tools:text="musicode"/>

    <RelativeLayout
        android:id="@+id/bubbleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameView"
        android:layout_toLeftOf="@id/avatarView"
        android:layout_marginRight="@dimen/message_list_right_card_message_margin_right"
        android:paddingTop="@dimen/message_list_zero"
        android:paddingBottom="@dimen/message_list_zero"
        android:paddingLeft="@dimen/message_list_zero"
        android:paddingRight="@dimen/message_list_zero"
        android:background="@drawable/message_list_bubble_right_state">

        <com.github.herokotlin.messagelist.view.RoundImageView
            android:id="@+id/thumbnailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/message_list_right_card_message_thumbnail_margin_top"
            android:layout_marginLeft="@dimen/message_list_right_card_message_thumbnail_margin_left"/>

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/thumbnailView"
            android:layout_marginTop="@dimen/message_list_right_card_message_title_margin_top"
            android:layout_marginLeft="@dimen/message_list_right_card_message_title_margin_left"
            android:layout_marginRight="@dimen/message_list_right_card_message_title_margin_right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/message_list_right_card_message_title_text_size"
            android:textColor="@color/message_list_right_card_message_title_text_color"
            tools:text="musicode"/>

        <TextView
            android:id="@+id/descView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleView"
            android:layout_toRightOf="@id/thumbnailView"
            android:layout_marginTop="@dimen/message_list_right_card_message_desc_margin_top"
            android:layout_marginLeft="@dimen/message_list_right_card_message_desc_margin_left"
            android:layout_marginRight="@dimen/message_list_right_card_message_desc_margin_right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/message_list_right_card_message_desc_text_size"
            android:textColor="@color/message_list_right_card_message_desc_text_color"
            tools:text="musicode"/>

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/message_list_card_message_divider_width"
            android:layout_below="@id/thumbnailView"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/message_list_right_card_message_divider_margin_top"
            android:layout_marginLeft="@dimen/message_list_right_card_message_divider_margin_left"
            android:layout_marginRight="@dimen/message_list_right_card_message_divider_margin_right"
            android:background="@color/message_list_right_card_message_divider_color"/>

        <TextView
            android:id="@+id/typeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerView"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/message_list_right_card_message_type_margin_top"
            android:layout_marginBottom="@dimen/message_list_right_card_message_type_margin_bottom"
            android:layout_marginLeft="@dimen/message_list_right_card_message_type_margin_left"
            android:textSize="@dimen/message_list_right_card_message_type_text_size"
            android:textColor="@color/message_list_right_card_message_type_text_color"
            tools:text="musicode"/>

    </RelativeLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spinnerView"
        android:layout_width="@dimen/message_list_spinner_size"
        android:layout_height="@dimen/message_list_spinner_size"
        android:layout_toLeftOf="@id/bubbleView"
        android:layout_alignBottom="@id/bubbleView"
        android:layout_marginRight="@dimen/message_list_right_status_view_margin_right"
        android:layout_marginBottom="@dimen/message_list_right_status_view_margin_bottom"
        app:SpinKit_Color="@color/message_list_spinner_color"
        style="@style/SpinKitView.FadingCircle"/>

    <ImageView
        android:id="@+id/failureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/bubbleView"
        android:layout_alignBottom="@id/bubbleView"
        android:layout_marginRight="@dimen/message_list_right_status_view_margin_right"
        android:layout_marginBottom="@dimen/message_list_right_status_view_margin_bottom"
        android:background="@drawable/message_list_failure"/>

</RelativeLayout>