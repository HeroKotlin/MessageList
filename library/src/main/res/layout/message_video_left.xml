<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/message_list_message_padding_horizontal"
                android:paddingRight="@dimen/message_list_message_padding_horizontal">

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/message_list_message_margin_top"
        android:textSize="@dimen/message_list_time_text_size"
        android:textColor="@color/message_list_time_text_color"
        android:background="@drawable/message_list_time"
        tools:text="12:12"/>

    <com.github.herokotlin.messagelist.view.RoundImageView
        android:id="@+id/avatarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_toRightOf="@id/avatarView"
        android:layout_marginLeft="@dimen/message_list_left_user_name_margin_left"
        android:layout_marginBottom="@dimen/message_list_left_user_name_margin_bottom"
        android:gravity="left"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/message_list_left_user_name_text_size"
        android:textColor="@color/message_list_left_user_name_text_color"
        tools:text="musicode"/>

    <com.github.herokotlin.messagelist.view.RoundImageView
        android:id="@+id/thumbnailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameView"
        android:layout_toRightOf="@id/avatarView"
        android:layout_marginLeft="@dimen/message_list_left_video_message_margin_left"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/playView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/thumbnailView"
        android:layout_alignRight="@id/thumbnailView"
        android:layout_alignTop="@id/thumbnailView"
        android:layout_alignBottom="@id/thumbnailView"
        android:scaleType="center"
        android:src="@drawable/message_list_play"/>

    <TextView
        android:id="@+id/durationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/thumbnailView"
        android:layout_alignBottom="@id/thumbnailView"
        android:layout_marginRight="@dimen/message_list_video_message_duration_margin_right"
        android:layout_marginBottom="@dimen/message_list_video_message_duration_margin_bottom"
        android:textSize="@dimen/message_list_left_video_message_duration_text_size"
        android:textColor="@color/message_list_left_video_message_duration_text_color"
        android:shadowColor="@color/message_list_left_video_message_duration_shadow_color"
        android:shadowRadius="@dimen/message_list_left_video_message_duration_shadow_radius"
        android:shadowDx="@dimen/message_list_left_video_message_duration_shadow_offset_x"
        android:shadowDy="@dimen/message_list_left_video_message_duration_shadow_offset_y"
        tools:text="12:00"/>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spinnerView"
        android:layout_width="@dimen/message_list_spinner_size"
        android:layout_height="@dimen/message_list_spinner_size"
        android:layout_toRightOf="@id/thumbnailView"
        android:layout_alignBottom="@id/thumbnailView"
        android:layout_marginLeft="@dimen/message_list_left_status_view_margin_left"
        android:layout_marginBottom="@dimen/message_list_left_status_view_margin_bottom"
        app:SpinKit_Color="@color/message_list_spinner_color"
        style="@style/SpinKitView.FadingCircle"/>

    <ImageView
        android:id="@+id/failureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/thumbnailView"
        android:layout_alignBottom="@id/thumbnailView"
        android:layout_marginLeft="@dimen/message_list_left_status_view_margin_left"
        android:layout_marginBottom="@dimen/message_list_left_status_view_margin_bottom"
        android:background="@drawable/message_list_failure"/>

</RelativeLayout>